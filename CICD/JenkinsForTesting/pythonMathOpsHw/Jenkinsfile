pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh 'python3 DevOps/JenkinsForTesting/pythonMathOps/math_ops.py'
      }
    }
    stage('Run Test') {
      steps {
        sh 'python3 -m pytest DevOps/JenkinsForTesting/pythonMathOps/test_math_ops.py'
      }
      post {
        always {
          script {
            allure([
              includeProperties: false,
              jdk: '',
              properties: [],
              reportBuildPolicy: 'ALWAYS',
              results: [[path: 'report']]
            ])
          }
        }
      }
    }
  }
}